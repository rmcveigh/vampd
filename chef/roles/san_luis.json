{
  "name": "san_luis",
  "description": "The role for san_luis",
  "chef_type": "role",
  "json_class": "Chef::Role",
  "default_attributes": {},
  "override_attributes": {
    "drupal": {
      "sites": {
        "san_luis": {
          "active": true,
          "deploy": {
            "action": ["deploy", "install"]
          },
          "drupal": {
            "settings": {
              "profile": "mmg_microsite",
              "docroot": "",
              "settings": {
                "default": {
                  "ignore": false
                },
                "local_dev": {
                  "location": "profiles/mmg_microsite/settings.mmg_microsite.localdev.php"
                }
              }
            }
          },
          "repository": {
            "host": "",
            "uri": "/vagrant/sites/san_luis/code",
            "revision": "master",
            "remotes": {
              "upstream": "ryan@pluto.milesmedia.com:/home/ryan/san_luis"
            }
          }
        }
      }
    },
    "nodejs": {
      "install_method": "package",
      "npm": "2.1.2"
    },
    "drupal_frontend": {
      "nodejs": {
        "packages":["grunt", "grunt-cli", "bower"]
      },
      "css_preprocessor": {
        "/srv/www/san_luis/current/profiles/mmg_microsite/themes/custom/mmg_microsite_bare": {
          "active": false,
          "gems": [
            "bundler"
          ],
          "commands": [
            "bundle install && bundle update",
            "npm install",
            "grunt build"
          ]
        }
      }
    }
  }
}
